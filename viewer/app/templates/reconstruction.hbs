<h1>Reconstruction</h1>

<div class="container">
    <div class="clearfix">
        <div class="col col-6">
            {{images-loader image_index=image_index}}
        </div>

        <div class="col col-6">
            {{#if reconstructed }}
                <img src='data:image/jpg;base64,{{reconstructed}}'
                    alt='missing image'>
            {{/if}}
        </div>
    </div>

    <div class="col col-12 px2">
        {{three-js-reconstruction update=(action 'updateComponentConnector')}}
    </div>
</div>

<div class="clearfix">
    <div class="mx-auto col-2">
        <button class="btn btn-primary" {{action "getReconstruction"}}>
            Show reconstruction
        </button>
    </div>
</div>
